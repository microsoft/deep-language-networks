{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Python Debugger: vi_main.py with Arguments",
        "type": "debugpy",
        "request": "launch",
        "cwd": "${workspaceFolder}/projects/vi_dln",  // Add this line
        "program": "vi_main.py",
        "console": "integratedTerminal",
        "args": ["--fwd_model_type", "gpt2", "--bwd_model_type", "gpt2"]
      },
    {
      "name": "Python Debugger: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "flask/app.py",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--no-reload"],
      "jinja": true,
      "autoStartBrowser": false
    }
  ]
}
